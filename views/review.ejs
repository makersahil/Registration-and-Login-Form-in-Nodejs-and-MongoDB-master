<body class="h-full">

    <header class="text-gray-600 body-font mx-4 my-3 rounded-2xl drop-shadow-lg" style="background-color: #6366f1">
        <div class="container mx-auto flex flex-wrap p-5 flex-col md:flex-row items-center">
            <a class="flex title-font font-medium items-center text-gray-900 mb-4 md:mb-0">
                <img src="https://play-lh.googleusercontent.com/e2Ogz9atOLuSAEuE5kpPOWk9hG3LRayq0B0mzU4u1i9ck7UuMIYpr5FVA7kKJ_I-sA"
                    width="40px" height="40px" alt="tulas">
            </a>
            <span class="ml-3 text-white font-extrabold text-3xl">Dashboard, Tula's Payment Utility</span>
            <nav class="md:ml-auto text-white md:mr-auto flex flex-wrap place-items-end text-base justify-center">
                <p class="text-3xl bg-indigo-600 p-5 rounded-xl">Welcome, <%= name %>
                </p>
            </nav>
            <a href="/logout"
                class="inline-flex items-center bg-gray-100 border-0 py-3 px-4 focus:outline-none hover:bg-gray-200 rounded text-base mt-3 md:mt-0">Log
                Out
                <svg fill="none" stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                    class="w-4 h-4 ml-1" viewBox="0 0 24 24">
                    <path d="M5 12h14M12 5l7 7-7 7"></path>
                </svg>
            </a>
        </div>

    </header>
    <p class="mt-4 text-lg">Review Your Details:</p>
    <section class="text-gray-600 body-font">
        <div class="container mx-auto flex px-5 py-24 md:flex-row flex-col items-center">
            <div
                class="lg:flex-grow md:w-1/2 lg:pr-24 md:pr-16 flex justify-around-center flex-col mb-16 md:mb-0 items-center text-center">
                <div class="bg-gray-200 rounded-lg p-5" style="width: 421.214px; height: 322.679px;">
                    <p class="text-lg font-bold flex">Name: <%= name %>
                    </p>
                    <br>
                    <p class="text-lg font-bold flex">Email: <%= email %>
                    </p>
                    <br>
                    <p class="text-lg font-bold flex">Student Id: <%= studentID %>
                    </p>
                    <br>
                    <p class="text-lg font-bold flex">Payment Type: <%= paymentType %>
                    </p>
                    <br>
                    <p class="text-lg font-bold flex">Semester: <%= semester %>
                    </p>
                    <br>
                    <p class="text-lg font-bold flex">Year: <%= year %>
                    </p>
                    <br>
                    <p class="text-lg font-bold flex">Amount: <%= amount %>
                    </p>
                    <br>
                    <p class="text-lg font-bold flex">Remarks: <%= remarks %>
                    </p>
                </div>
                <div class="flex justify-between m-4" style="width: 421.214px;">
                    <button href="#" onclick="history.back()"
                        class="bg-transparent hover:bg-blue-500 text-blue-700 font-semibold hover:text-white py-2 px-4 border border-blue-500 hover:border-transparent rounded">Edit</button>
                    <a href="/success"
                        class="font-bold py-2 px-4 no-underline hover:bg-blue-600 hover:text-white hover:no-underline rounded bg-blue-500 text-white bg-blue-700">Confirm</a>
                </div>
            </div>
        </div>
    </section>

